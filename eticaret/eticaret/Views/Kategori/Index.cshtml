@model IEnumerable<eticaret.Models.Kategori>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Kategoriler</h2>
        <a class="btn btn-success" href="@Url.Action("Create")">Yeni Kategori Ekle</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kategori in Model)
            {
                <tr>
                    <td>@kategori.KategoriNo</td>
                    <td>@kategori.KategoriAdi</td>
                    <td>
                        <a class="btn btn-sm btn-primary me-1" href="@Url.Action("Edit", new { id = kategori.KategoriNo })">Düzenle</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = kategori.KategoriNo })">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
